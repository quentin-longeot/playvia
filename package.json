{
  "name": "playvia",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rm -rf dist/mocks && node esbuild.config.mjs",
    "build:watch": "node esbuild.config.mjs --watch",
    "serve": "npx serve dist -l 8000",
    "dev": "mkdir -p dist && cp -rf ./mocks ./dist/ && npx concurrently \"npm run build:watch\" \"npm run serve\"",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "concurrently": "^9.1.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "shaka-player": "^4.16.16"
  }
}
